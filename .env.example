# Production Environment Variables
NODE_ENV=production

# MongoDB Configuration
MONGO_ROOT_USERNAME=your_mongo_username
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGODB_URI=mongodb://your_mongo_username:your_secure_mongo_password@mongodb:27017/chils_korean_store?authSource=admin

# Session Configuration
SESSION_SECRET=your_very_long_random_session_secret_at_least_32_characters

# Application Configuration
PORT=3000
APP_NAME=Chil's Korean Store
APP_URL=https://your-domain.com

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
